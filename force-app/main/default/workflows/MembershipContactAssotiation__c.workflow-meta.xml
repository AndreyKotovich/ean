<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Call_For_Membership_Renewal_Email_Alert</fullName>
        <description>Call For Membership Renewal Email Alert</description>
        <protected>false</protected>
        <recipients>
            <field>Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>membership@ean.org</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>EAN_Email_templates/CallForRenewalEmailTemplatePage</template>
    </alerts>
    <alerts>
        <fullName>Call_For_Membership_Renewal_Reminder_Email_Alert</fullName>
        <description>Call For Membership Renewal Reminder Email Alert</description>
        <protected>false</protected>
        <recipients>
            <field>Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>membership@ean.org</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>EAN_Email_templates/CallForRenewalReminderEmailTemplate</template>
    </alerts>
    <alerts>
        <fullName>Membership_Expire</fullName>
        <description>Membership Expire</description>
        <protected>false</protected>
        <recipients>
            <field>Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>membership@ean.org</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Membership_Expiration_Date/Membership_Expiration_Date_Alert</template>
    </alerts>
    <rules>
        <fullName>Membership Expiring Email Alert</fullName>
        <active>false</active>
        <criteriaItems>
            <field>MembershipContactAssotiation__c.IsActive__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>This Workflow Rule alerts a Contact by email 10 days before his membership expire.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Membership_Expire</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>MembershipContactAssotiation__c.Expiration_date__c</offsetFromField>
            <timeLength>-10</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>

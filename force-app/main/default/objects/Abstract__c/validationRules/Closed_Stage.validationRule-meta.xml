<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_Stage</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISPICKVAL(Stage__c, &quot;Closed&quot;)) &amp;&amp; 
(ISPICKVAL(Status__c, &quot;Accepted&quot;) || ISPICKVAL(Status__c, &quot;Rejected&quot;))</errorConditionFormula>
    <errorDisplayField>Stage__c</errorDisplayField>
    <errorMessage>Please set the stage to closed when this abstract has been accepted or rejected.</errorMessage>
</ValidationRule>
